<p style="color: green"><%= notice %></p>

<h1>Articles</h1>

<div ><%= link_to "New article", new_article_path %></div>

<h1>
  articles:
  <%= @articles.count %>
</h1>
<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% @articles.each do |article| %>
    <%= render 'articles/article', article: article %>
  <% end %>
</div>
